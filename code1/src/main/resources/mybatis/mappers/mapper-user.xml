<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mrvu.user">

    <resultMap id="userMap" type="com.coeding.springmvc.entity.User">
     <id property="id" column="id" />
     <result property="dateJoined"	 column="date_joined" />
     <result property="email" column="email" />
     <result property="firstName" column="first_name" />
     <result property="isActive" column="is_active" />
     <result property="isStaff" column="is_staff" />
     <result property="isSuperuser" column="is_superuser" />
     <result property="lastLogin" column="last_login" />
     <result property="lastName" column="last_name" />
     <result property="password" column="password" />
     <result property="username" column="username" />
     <result property="image" column="image" />
   </resultMap> 


	<select id="listUser" resultMap="userMap"  >
	<![CDATA[
		SELECT * FROM user ORDER BY id desc LIMIT 100
		
	]]>
	</select>
	
	<select id="getUserByUsername" parameterType="String" resultMap="userMap">
	<![CDATA[
		select * from user where username = #{username}
	]]>
	</select>
	
	<select id="getUserById" resultMap="userMap">
	<![CDATA[
		select * from user where id = #{id}
	]]>
	</select>
	
	<select id="getUsersWithKey" resultMap="userMap">
	<![CDATA[
		select * from user where 
		(username LIKE #{key}) or (last_name LIKE #{key}) or (first_name LIKE #{key})
	]]>
	</select>
	
	<insert id="createUser" >
	<![CDATA[
		insert into user (email, first_name,is_active, is_staff, is_superuser,last_name,username,password,date_joined,last_login,image)
		values (#{email}, #{firstName},#{isActive}, #{isStaff}, #{isSuperuser}, #{lastName}, #{username}, #{password},now(),now(),#{image})
	]]>	
	</insert>

	<update id="updateUser" parameterType="com.coeding.springmvc.entity.User">
	<![CDATA[
		update user set 
		email=#{email},
		last_name = #{lastName},
		first_name = #{firstName},
		is_active = #{isActive},
		is_staff = #{isStaff},
		is_superuser = #{isSuperuser}
		where id= #{id}
		
	]]>	
	</update>
	
	<update id="resetpassword" parameterType="String">
	<![CDATA[
		update user set 
		password=123456
		
		where username= #{username}
		
	]]>	
	</update>
	
	<delete id="deleteUser" >
	<![CDATA[
		DELETE FROM user WHERE  id= #{id};
	]]>	
	</delete>
</mapper>	
